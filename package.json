{
  "name": "nestjs-example-app",
  "version": "0.0.1",
  "description": "A sample nest js project for self training purpose",
  "author": "Marat Sadykov",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/src/main.js\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --runInBand --verbose",
    "test:e2e": "jest --runInBand --forceExit --verbose --config src/__test__/e2e/config/jest-e2e.json",
    "precommit": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^6.11.11",
    "@nestjs/core": "^6.11.11",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/platform-express": "^6.11.11",
    "@nestjs/swagger": "^4.4.0",
    "@nestjs/testing": "^6.11.11",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "monet": "^0.9.1",
    "mongoose": "^5.9.5",
    "reflect-metadata": "^0.1.13",
    "request-promise-native": "^1.0.8",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.2",
    "@types/faker": "^4.1.10",
    "@types/hapi__joi": "^16.0.12",
    "@types/jest": "25.1.3",
    "@types/mongoose": "^5.7.7",
    "@types/node": "^13.9.3",
    "@types/request-promise-native": "^1.0.17",
    "@types/supertest": "2.0.8",
    "jest": "25.1.0",
    "mongodb-memory-server": "^6.4.1",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "tsc-watch": "4.2.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.0.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/__test__/e2e"
    ]
  }
}
